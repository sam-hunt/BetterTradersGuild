<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Paint Terrain GenStep

    Paints all MetalTile terrain with BTG_OrbitalSteel color for a unified aesthetic.
    This gives TradersGuild settlements their distinctive blue-gray steel appearance.

    XML-configurable parameters:
    - terrain: TerrainDef to paint
    - color: ColorDef to apply

    NOTE: Terrain must have isPaintable=true for painting to work.
  -->

  <GenStepDef>
    <defName>BTG_PaintTerrain</defName>
    <order>255</order>
    <genStep Class="BetterTradersGuild.MapGeneration.GenStep_PaintTerrain">
      <terrain>MetalTile</terrain>
      <color>BTG_OrbitalSteel</color>
    </genStep>
  </GenStepDef>
</Defs>
