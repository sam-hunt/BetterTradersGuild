<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Set Wall Lamp Color GenStep

    Sets the glow color of wall lamps on the map to give TradersGuild settlements
    a consistent blue-tinted lighting aesthetic that matches AncientEmergencyLight_Blue.

    XML-configurable parameters:
    - wallLampDef: ThingDef of the wall lamp to modify
    - glowColor: ColorInt for the glow color (r, g, b) where each value is 0-255
  -->

  <GenStepDef>
    <defName>BTG_SetWallLampColor</defName>
    <order>265</order>
    <genStep Class="BetterTradersGuild.MapGeneration.GenStep_SetWallLampColor">
      <wallLampDef>WallLamp</wallLampDef>
      <glowColor>(187, 187, 221)</glowColor>
    </genStep>
  </GenStepDef>
</Defs>
