<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Hydroponic Healroot Prefab (EdgeOnly)
    Self-contained hydroponics setup for medical bay healroot cultivation.

    Features:
    - 4x2 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=1):
        x: 0 1 2 3
    z=1:   B B B B
    z=0:   . S . .

    Legend:
    B = HydroponicsBasin (1x4 rotated, spans x=0-3 at z=1)
    S = SunLamp (provides growth light)
    . = empty space
  -->

  <PrefabDef>
    <defName>BTG_HydroponicHealroot</defName>
    <edgeOnly>true</edgeOnly>
    <size>(4,2)</size>
    <things>
      <!-- Sunlamp at front center for plant growth light -->
      <SunLamp>
        <position>(1, 0, 0)</position>
      </SunLamp>

      <!-- Hydroponics basin rotated to span full width at back wall -->
      <HydroponicsBasin>
        <position>(0, 0, 1)</position>
        <relativeRotation>Clockwise</relativeRotation>
      </HydroponicsBasin>

      <!-- Life support unit on back wall (power generation + oxygen backup) -->
      <LifeSupportUnit>
        <position>(2, 0, 1)</position>
      </LifeSupportUnit>

      <!-- Ancient emergency light blue for nighttime illumination -->
      <AncientEmergencyLight_Blue>
        <position>(3, 0, 1)</position>
      </AncientEmergencyLight_Blue>
    </things>
  </PrefabDef>
</Defs>
