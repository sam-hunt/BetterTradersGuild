<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Charge Rifle Shelf Prefab
    Weapon storage shelf for armory.

    Features:
    - 2x1 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=0):
        x: 0 1
    z=0:   S S

    Legend:
    S = Shelf (steel, excellent quality, facing into room)
        + 0-3 Gun_ChargeRifle per position
        Quality distribution: Normal (70%), Good (50%), Excellent (30%)
  -->

  <PrefabDef>
    <defName>BTG_ChargeRifleShelf_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(2,1)</size>
    <things>
      <!-- Steel shelf for weapon storage -->
      <Shelf>
        <position>(0,0,0)</position>
        <relativeRotation>Opposite</relativeRotation>
        <quality>Excellent</quality>
        <stuff>Steel</stuff>
      </Shelf>

      <!-- Position 1: Charge rifles with decreasing quality chances -->
      <Gun_ChargeRifle>
        <chance>0.70</chance>
        <position>(0,0,0)</position>
        <quality>Normal</quality>
      </Gun_ChargeRifle>
      <Gun_ChargeRifle>
        <chance>0.50</chance>
        <position>(0,0,0)</position>
        <quality>Good</quality>
      </Gun_ChargeRifle>
      <Gun_ChargeRifle>
        <chance>0.30</chance>
        <position>(0,0,0)</position>
        <quality>Excellent</quality>
      </Gun_ChargeRifle>

      <!-- Position 2: Charge rifles with decreasing quality chances -->
      <Gun_ChargeRifle>
        <chance>0.70</chance>
        <position>(1,0,0)</position>
        <quality>Normal</quality>
      </Gun_ChargeRifle>
      <Gun_ChargeRifle>
        <chance>0.50</chance>
        <position>(1,0,0)</position>
        <quality>Good</quality>
      </Gun_ChargeRifle>
      <Gun_ChargeRifle>
        <chance>0.30</chance>
        <position>(1,0,0)</position>
        <quality>Excellent</quality>
      </Gun_ChargeRifle>
    </things>
  </PrefabDef>
</Defs>
