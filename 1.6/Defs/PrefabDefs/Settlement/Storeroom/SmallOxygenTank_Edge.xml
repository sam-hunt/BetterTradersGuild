<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    BTG_SmallOxygenTank_Edge - VE Gravships oxygen tank with valve

    Features:
    - 2x3 prefab size
    - Edge placement (valve against wall)
    - 2x2 tank with valve above

    Design (top view, North is up, wall at z=2):
        x: 0 1
    z=2:   V .   Valve at (0,0,2)
    z=1:   T T   Tank (2x2)
    z=0:   T T

    Legend:
    V = VGE_OxygenValve (facing wall)
    T = VGE_SmallOxygenTank
  -->
  <PrefabDef MayRequire="vanillaexpanded.gravship">
    <defName>BTG_SmallOxygenTank_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(2,3)</size>
    <things>
      <VGE_OxygenValve>
        <position>(0,0,2)</position>
        <relativeRotation>Opposite</relativeRotation>
      </VGE_OxygenValve>
      <VGE_SmallOxygenTank>
        <position>(0,0,0)</position>
      </VGE_SmallOxygenTank>
    </things>
  </PrefabDef>

</Defs>