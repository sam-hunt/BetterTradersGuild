<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Dining Tables Prefab
    Steel dining tables with chairs for the mess hall.
    Based on vanilla DiningTable_Large structure with steel materials.

    Features:
    - 4x5 prefab size
    - 2x2 steel tables x2
    - Steel dining chairs facing each table

    Design (top view, North is up):
        x: 0 1 2 3
    z=4:   C T T C
    z=3:   C T T C
    z=2:   . . . .
    z=1:   C T T C     C = DiningChair (steel)
    z=0:   C T T C     T = Table2x2c (steel)

    Legend:
    T = Table2x2c (steel)
    C = DiningChair (steel)
  -->

  <PrefabDef>
    <defName>BTG_DiningTables</defName>
    <size>(4,5)</size>
    <things>
      <!-- Steel dining chairs on left side (facing right/clockwise) -->
      <DiningChair>
        <positions>
          <li>(0, 0, 0)</li>
          <li>(0, 0, 1)</li>
          <li>(0, 0, 3)</li>
          <li>(0, 0, 4)</li>
        </positions>
        <relativeRotation>Clockwise</relativeRotation>
        <stuff>Steel</stuff>
      </DiningChair>

      <!-- Steel dining chairs on right side (facing left/counterclockwise) -->
      <DiningChair>
        <positions>
          <li>(3, 0, 0)</li>
          <li>(3, 0, 1)</li>
          <li>(3, 0, 3)</li>
          <li>(3, 0, 4)</li>
        </positions>
        <relativeRotation>Counterclockwise</relativeRotation>
        <stuff>Steel</stuff>
      </DiningChair>

      <!-- Steel 2x2 tables in center -->
      <Table2x2c>
        <positions>
          <li>(1, 0, 0)</li>
          <li>(1, 0, 3)</li>
        </positions>
        <stuff>Steel</stuff>
      </Table2x2c>
    </things>
  </PrefabDef>

</Defs>
