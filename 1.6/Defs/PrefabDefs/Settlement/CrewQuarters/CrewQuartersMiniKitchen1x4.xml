<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Crew Quarters Mini Kitchen Prefab
    Requires VFE Production for the kitchen sink cabinet.

    Features:
    - 1x4 prefab size
    - Steel shelf stocked with survival meals and medicine
    - VFE Kitchen sink cabinet for food prep

    Design (top view, North is up, all facing East):
        x: 0
    z=3:  [K]  ← VFE_KitchenSinkCabinet (top)
    z=2:  [K]
    z=1:  [S]  ← Shelf with industrial medicine
    z=0:  [S]  ← Shelf with survival meals

    Legend:
    K = VFE_KitchenSinkCabinet (1x2 rotated East)
    S = Shelf (1x2 rotated East, steel)
  -->

  <PrefabDef MayRequire="VanillaExpanded.VFEProduction">
    <defName>BTG_CrewQuartersMiniKitchen1x4</defName>
    <size>(1,4)</size>
    <things>
      <!-- Steel shelf for meal storage -->
      <Shelf>
        <position>(0, 0, 1)</position>
        <relativeRotation>Clockwise</relativeRotation>
        <quality>Normal</quality>
        <stuff>Steel</stuff>
      </Shelf>

      <!-- Packaged survival meals on shelf -->
      <MealSurvivalPack>
        <chance>0.7</chance>
        <position>(0, 0, 0)</position>
        <stackCountRange>3~6</stackCountRange>
      </MealSurvivalPack>
      <!-- Industrial medicine on shelf -->
      <MedicineIndustrial>
        <chance>0.7</chance>
        <position>(0, 0, 1)</position>
        <stackCountRange>2~4</stackCountRange>
      </MedicineIndustrial>

      <!-- Kitchen sink cabinet -->
      <VFE_KitchenSinkCabinet>
        <position>(0, 0, 3)</position>
        <relativeRotation>Clockwise</relativeRotation>
      </VFE_KitchenSinkCabinet>

      <WallLamp>
        <position>(0, 0, 1)</position>
        <relativeRotation>Counterclockwise</relativeRotation>
      </WallLamp>
    </things>
  </PrefabDef>
</Defs>