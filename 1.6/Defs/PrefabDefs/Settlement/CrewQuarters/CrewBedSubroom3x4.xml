<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Crew Bed Subroom Prefab
    Private sleeping quarters for crew members with desk and meditation corner.

    Features:
    - 3x4 prefab size
    - Self-contained subroom with internal walls and blast door entry

    Design (top view, North is up, entry from z=0):
        x: 0 1 2
    z=3:   B B S
    z=2:   B B M
    z=1:   R R .
    z=0:   W W d

    Legend:
    W = OrbitalAncientFortifiedWall
    d = AncientBlastDoor (with HiddenConduit)
    B = DoubleBed (steel, facing south)
    S = ShelfSmall (steel)
    R = Dresser (steel)
    F = FirefoamPopper (customization marker)
    L = WallLamp (not shown, attaches to south wall)
    . = empty space
  -->

  <PrefabDef>
    <defName>BTG_CrewBedSubroom3x4</defName>
    <size>(3,4)</size>

    <things>
      <OrbitalAncientFortifiedWall>
        <rects>
          <li>(0,0,1,0)</li>
        </rects>
      </OrbitalAncientFortifiedWall>

      <Dresser>
        <position>(1, 0, 1)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
        <quality>Good</quality>
      </Dresser>

      <FirefoamPopper>
        <position>(2, 0, 2)</position>
      </FirefoamPopper>

      <HiddenConduit>
        <position>(2, 0, 0)</position>
      </HiddenConduit>

      <WallLamp>
        <position>(0, 0, 1)</position>
        <relativeRotation>Opposite</relativeRotation>
      </WallLamp>

      <AncientBlastDoor>
        <position>(2, 0, 0)</position>
      </AncientBlastDoor>

      <DoubleBed>
        <position>(1, 0, 3)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
        <quality>Good</quality>
      </DoubleBed>

      <ShelfSmall>
        <position>(2, 0, 3)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
        <quality>Good</quality>
      </ShelfSmall>

    </things>
  </PrefabDef>
</Defs>
