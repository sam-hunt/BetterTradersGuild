<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Crew Quarters Table Prefab

    Features:
    - 2x4 prefab size
    - Centered 2x2 steel table with dining chairs above and below
    - SterileTile flooring throughout

    Design (top view, North is up):
        x: 0 1
    z=3:   C C
    z=2:   T T
    z=1:   T T
    z=0:   C C

    Legend:
    C = DiningChair (steel, facing table)
    T = Table2x2c (steel, 2x2)
  -->
  <PrefabDef>
    <defName>BTG_CrewQuartersTable2x4</defName>
    <size>(2,4)</size>

    <things>
      <!-- Steel dining chairs at bottom (facing North towards table) -->
      <DiningChair>
        <positions>
          <li>(0, 0, 0)</li>
          <li>(1, 0, 0)</li>
        </positions>
        <stuff>Steel</stuff>
      </DiningChair>

      <!-- Steel dining chairs at top (facing South towards table) -->
      <DiningChair>
        <positions>
          <li>(0, 0, 3)</li>
          <li>(1, 0, 3)</li>
        </positions>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
      </DiningChair>

      <!-- Steel 2x2 table in center -->
      <Table2x2c>
        <positions>
          <li>(0, 0, 1)</li>
        </positions>
        <stuff>Steel</stuff>
      </Table2x2c>

      <WallLamp>
        <position>(0, 0, 1)</position>
        <relativeRotation>Counterclockwise</relativeRotation>
      </WallLamp>
    </things>

    <terrain>
      <SterileTile>
        <rects>
          <li>(0,0,1,3)</li>
        </rects>
      </SterileTile>
    </terrain>

  </PrefabDef>
</Defs>