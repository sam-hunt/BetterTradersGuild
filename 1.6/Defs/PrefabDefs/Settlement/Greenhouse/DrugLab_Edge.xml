<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Drug Lab Prefab
    Working drug lab bench for medicine/drug production.
    Replaces AncientTableDrugLab (crumbling, shattered, contaminated).

    Features:
    - 3x1 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=0):
        x: 0 1 2
    z=0:   D D D

    Legend:
    D = DrugLab (steel, 3x1, facing into room)
  -->

  <PrefabDef>
    <defName>BTG_DrugLab_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(3,1)</size>
    <things>
      <DrugLab>
        <position>(1, 0, 0)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
      </DrugLab>
    </things>
  </PrefabDef>

</Defs>
