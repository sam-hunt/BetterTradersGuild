<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    BTG_BandNode_Cluster - Band node cluster for mech control

    Features:
    - 5x4 prefab size
    - Center placement (not edge-only)
    - North rotation only

    Design (top view, North is up):
        x: 0 1 2 3 4
    z=3:   . . . . .
    z=2:   B . . B .
    z=1:   . . . . .
    z=0:   B . . B .

    Legend:
    B = BandNode (75% spawn chance each)
    . = empty space
  -->
  <PrefabDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>BTG_BandNode_Cluster</defName>
    <rotations>North</rotations>
    <size>(5,4)</size>
    <things>
      <BandNode>
        <chance>0.75</chance>
        <positions>
          <li>(0, 0, 0)</li>
          <li>(3, 0, 0)</li>
          <li>(0, 0, 2)</li>
          <li>(3, 0, 2)</li>
        </positions>
      </BandNode>
    </things>
  </PrefabDef>

</Defs>
