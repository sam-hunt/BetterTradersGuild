<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Workshop - Electric Smelter with Stool

    Design (wall at top/z=1):
        x: 0 1 2
    z=1:   E E E   (electric smelter)
    z=0:   . S .   (stool at interaction spot)
  -->
  <PrefabDef>
    <defName>BTG_ElectricSmelter_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(3,2)</size>
    <things>
      <ElectricSmelter>
        <position>(0, 0, 1)</position>
        <relativeRotation>Opposite</relativeRotation>
      </ElectricSmelter>
      <Stool>
        <position>(1, 0, 0)</position>
        <stuff>Steel</stuff>
      </Stool>
    </things>
  </PrefabDef>
</Defs>
