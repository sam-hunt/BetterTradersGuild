<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Pod Supply Shelf Prefab
    Supply shelf for pod launch operations.

    Features:
    - 2x1 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=0):
        x: 0 1
    z=0:   S S

    Legend:
    S = Shelf (steel, excellent quality, facing into room)
        + 65% chance: Chemfuel (50-75 units, pod fuel)
        + 65% chance: Steel (50-75 units, repair materials)
  -->

  <PrefabDef>
    <defName>BTG_PodSupplyShelf_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(2,1)</size>
    <things>
      <!-- Steel shelf for pod supplies -->
      <Shelf>
        <position>(0,0,0)</position>
        <relativeRotation>Opposite</relativeRotation>
        <quality>Excellent</quality>
        <stuff>Steel</stuff>
      </Shelf>

      <!-- Chemfuel for pod fuel -->
      <Chemfuel>
        <chance>0.65</chance>
        <position>(0,0,0)</position>
        <stackCountRange>50~75</stackCountRange>
      </Chemfuel>

      <!-- Steel for repairs -->
      <Steel>
        <chance>0.65</chance>
        <position>(0,0,0)</position>
        <stackCountRange>50~75</stackCountRange>
      </Steel>
    </things>
  </PrefabDef>
</Defs>
