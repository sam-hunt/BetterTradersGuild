<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Barracks Bed Prefab
    Modern crew quarters sleeping arrangement.

    Features:
    - 7x3 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=2):
        x: 0 1 2 3 4 5 6
    z=2:   T B T B T B T
    z=1:   . B . B . B .
    z=0:   . . . D . . .

    Legend:
    B = Bed (steel, facing into room)
    T = EndTable (steel, facing into room)
    D = Dresser (steel)
    . = empty space
  -->

  <PrefabDef>
    <defName>BTG_BarracksBeds_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(7,3)</size>
    <things>
      <!-- Modern beds (non-rusted) in a row -->
      <Bed>
        <positions>
          <li>(1, 0, 2)</li>
          <li>(3, 0, 2)</li>
          <li>(5, 0, 2)</li>
        </positions>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
      </Bed>

      <!-- End tables between beds for personal items -->
      <EndTable>
        <positions>
          <li>(0, 0, 2)</li>
          <li>(2, 0, 2)</li>
          <li>(4, 0, 2)</li>
          <li>(6, 0, 2)</li>
        </positions>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
      </EndTable>

      <!-- Dresser for clothing storage -->
      <Dresser>
        <position>(3, 0, 0)</position>
        <stuff>Steel</stuff>
      </Dresser>
    </things>
  </PrefabDef>
</Defs>
