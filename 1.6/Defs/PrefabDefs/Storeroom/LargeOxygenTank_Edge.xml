<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    BTG_LargeOxygenTank_Edge - VE Gravships oxygen tank with valve

    Features:
    - 3x4 prefab size
    - Edge placement (valve against wall)
    - 3x3 tank with valve centered above

    Design (top view, North is up, wall at z=4):
        x: 0 1 2 3 4
    z=3:   . . V . .  Valve at (2,0,3)
    z=2:   . T T T .  Tank (3x3)
    z=1:   . T T T .
    z=0:   . T T T .

    Legend:
    V = VGE_OxygenValve (facing wall)
    T = VGE_LargeOxygenTank
  -->
  <PrefabDef MayRequire="vanillaexpanded.gravship">
    <defName>BTG_LargeOxygenTank_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(5,4)</size>
    <things>
      <VGE_OxygenValve>
        <position>(2,0,3)</position>
        <relativeRotation>Opposite</relativeRotation>
      </VGE_OxygenValve>
      <VGE_LargeOxygenTank>
        <position>(2,0,1)</position>
      </VGE_LargeOxygenTank>
    </things>
  </PrefabDef>

</Defs>