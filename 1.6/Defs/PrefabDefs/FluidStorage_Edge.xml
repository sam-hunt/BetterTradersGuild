<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - VE Pipe Network Fluid Storage Prefabs
    Tank + valve combinations for Storeroom edge placement.

    Design principle:
    Players access pipe network resources by securing a room with tanks
    and opening a valve to connect supply to the station-wide network.

    Coordinate system (edgeOnly):
    - Wall at HIGH z (back of prefab)
    - z=0 toward room interior
    - Valve against wall, tank in front
  -->

  <!-- ═══════════════════════════════════════════════════════════════════════
       VE CHEMFUEL (VanillaExpanded.VChemfuelE)
       ═══════════════════════════════════════════════════════════════════════ -->

  <!--
    Chemfuel Tank (3x3 prefab)
    2x3 tank rotated to 3x2, valve centered above

    Design (top view, wall at z=2):
        x: 0 1 2
    z=2:   . V .   Valve at (1,0,2)
    z=1:   T T T   Tank (rotated 2x3 -> 3x2)
    z=0:   T T T
  -->
  <PrefabDef MayRequire="VanillaExpanded.VChemfuelE">
    <defName>BTG_ChemfuelTank_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(3,3)</size>
    <things>
      <VCHE_ChemfuelValve>
        <position>(1,0,2)</position>
        <relativeRotation>Opposite</relativeRotation>
      </VCHE_ChemfuelValve>
      <PS_ChemfuelTank>
        <position>(0,0,0)</position>
        <rotation>East</rotation>
      </PS_ChemfuelTank>
    </things>
  </PrefabDef>

  <!--
    Deepchem Tank (3x3 prefab)
    Same layout as chemfuel tank

    Design (top view, wall at z=2):
        x: 0 1 2
    z=2:   . V .   Valve at (1,0,2)
    z=1:   T T T   Tank (rotated 2x3 -> 3x2)
    z=0:   T T T
  -->
  <PrefabDef MayRequire="VanillaExpanded.VChemfuelE">
    <defName>BTG_DeepchemTank_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(3,3)</size>
    <things>
      <VCHE_DeepchemValve>
        <position>(1,0,2)</position>
        <relativeRotation>Opposite</relativeRotation>
      </VCHE_DeepchemValve>
      <PS_DeepchemTank>
        <position>(0,0,0)</position>
        <rotation>East</rotation>
      </PS_DeepchemTank>
    </things>
  </PrefabDef>

  <!-- ═══════════════════════════════════════════════════════════════════════
       VE NUTRIENT PASTE (VanillaExpanded.VNutrientE)
       ═══════════════════════════════════════════════════════════════════════ -->

  <!--
    Nutrient Paste Vat (2x3 prefab)
    2x2 vat with valve above

    Design (top view, wall at z=2):
        x: 0 1
    z=2:   V .   Valve at (0,0,2)
    z=1:   T T   Vat (2x2)
    z=0:   T T
  -->
  <PrefabDef MayRequire="VanillaExpanded.VNutrientE">
    <defName>BTG_NutrientPasteVat_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(2,3)</size>
    <things>
      <VNPE_NutrientPasteValve>
        <position>(0,0,2)</position>
        <relativeRotation>Opposite</relativeRotation>
      </VNPE_NutrientPasteValve>
      <VNPE_NutrientPasteVat>
        <position>(0,0,0)</position>
      </VNPE_NutrientPasteVat>
    </things>
  </PrefabDef>

  <!-- ═══════════════════════════════════════════════════════════════════════
       VE GRAVSHIPS (vanillaexpanded.gravship)
       ═══════════════════════════════════════════════════════════════════════ -->

  <!--
    Large Oxygen Tank (3x4 prefab)
    3x3 tank with valve centered above

    Design (top view, wall at z=3):
        x: 0 1 2
    z=3:   . V .   Valve at (1,0,3)
    z=2:   T T T   Tank (3x3)
    z=1:   T T T
    z=0:   T T T
  -->
  <PrefabDef MayRequire="vanillaexpanded.gravship">
    <defName>BTG_LargeOxygenTank_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(3,4)</size>
    <things>
      <VGE_OxygenValve>
        <position>(1,0,3)</position>
        <relativeRotation>Opposite</relativeRotation>
      </VGE_OxygenValve>
      <VGE_LargeOxygenTank>
        <position>(0,0,0)</position>
      </VGE_LargeOxygenTank>
    </things>
  </PrefabDef>

  <!--
    Giant Astrofuel Tank (6x4 prefab)
    6x3 tank with valve centered above

    Design (top view, wall at z=3):
        x: 0 1 2 3 4 5
    z=3:   . . V . . .   Valve at (2,0,3)
    z=2:   T T T T T T   Tank (6x3)
    z=1:   T T T T T T
    z=0:   T T T T T T
  -->
  <PrefabDef MayRequire="vanillaexpanded.gravship">
    <defName>BTG_GiantAstrofuelTank_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(6,4)</size>
    <things>
      <VGE_AstrofuelValve>
        <position>(2,0,3)</position>
        <relativeRotation>Opposite</relativeRotation>
      </VGE_AstrofuelValve>
      <VGE_GiantAstrofuelTank>
        <position>(0,0,0)</position>
      </VGE_GiantAstrofuelTank>
    </things>
  </PrefabDef>

</Defs>
