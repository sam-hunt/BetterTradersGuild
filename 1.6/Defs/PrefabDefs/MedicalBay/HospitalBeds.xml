<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Hospital Beds Interior Prefab
    Compact hospital bed unit for interior room placement.

    Features:
    - 3x2 prefab size
    - Center placement (not edge-only)

    Design (top view, North is up):
        x: 0 1 2
    z=1:   H V H
    z=0:   H . H

    Legend:
    H = HospitalBed (steel)
    V = VitalsMonitor (between beds)
    . = empty space (patient access)
  -->

  <PrefabDef>
    <defName>BTG_HospitalBeds</defName>
    <size>(3,2)</size>
    <things>
      <!-- Two hospital beds with vitals monitor between them -->
      <HospitalBed>
        <positions>
          <li>(0, 0, 1)</li>
          <li>(2, 0, 1)</li>
        </positions>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
      </HospitalBed>

      <!-- Vitals monitor between beds -->
      <VitalsMonitor>
        <position>(1, 0, 1)</position>
        <relativeRotation>Opposite</relativeRotation>
      </VitalsMonitor>
    </things>
  </PrefabDef>
</Defs>