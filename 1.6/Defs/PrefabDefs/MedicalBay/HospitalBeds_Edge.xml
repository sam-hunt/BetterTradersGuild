<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Hospital Bed Prefab
    Modern, clean hospital beds for TradersGuild medical facilities.

    Features:
    - 6x3 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=2):
        x: 0 1 2 3 4 5
    z=2:   V H T H V H
    z=1:   . H . H . H
    z=0:   . . . . . .

    Legend:
    H = HospitalBed (steel, facing into room)
    V = VitalsMonitor (patient monitoring)
    T = EndTable (steel, patient convenience)
    . = empty space (staff access)
  -->

  <PrefabDef>
    <defName>BTG_HospitalBeds_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(6,3)</size>
    <things>
      <!-- Modern hospital beds (non-rusted) in a row -->
      <HospitalBed>
        <positions>
          <li>(1, 0, 2)</li>
          <li>(3, 0, 2)</li>
          <li>(5, 0, 2)</li>
        </positions>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
      </HospitalBed>

      <!-- Vitals monitors for patient monitoring (alternating) -->
      <VitalsMonitor>
        <positions>
          <li>(0, 0, 2)</li>
          <li>(4, 0, 2)</li>
        </positions>
      </VitalsMonitor>

      <!-- End tables for patient convenience (alternating) -->
      <EndTable>
        <positions>
          <li>(2, 0, 2)</li>
        </positions>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>Steel</stuff>
      </EndTable>
    </things>
  </PrefabDef>
</Defs>
