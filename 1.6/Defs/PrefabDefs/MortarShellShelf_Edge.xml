<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Mortar Shell Shelf Prefab
    Heavy ordinance storage shelf for armory.

    Features:
    - 2x1 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=0):
        x: 0 1
    z=0:   S S

    Legend:
    S = Shelf (steel, excellent quality, facing into room)
        Position 0: 6-12 Shell_HighExplosive (guaranteed)
        Position 1: 1 Shell_HighExplosive marker (replaced by RoomContents_Armory)
          - 25% chance: 1-3 antigrain warhead shells
          - 75% chance: 8-14 random mortar shells
  -->

  <PrefabDef>
    <defName>BTG_MortarShellShelf_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(2,1)</size>
    <things>
      <!-- Steel shelf for ordnance storage -->
      <Shelf>
        <position>(0,0,0)</position>
        <relativeRotation>Opposite</relativeRotation>
        <quality>Excellent</quality>
        <stuff>Steel</stuff>
      </Shelf>

      <!-- Position 1: Guaranteed High Explosive shells -->
      <Shell_HighExplosive>
        <position>(0,0,0)</position>
        <stackCountRange>6~12</stackCountRange>
      </Shell_HighExplosive>

      <!-- Position 2: Single HE shell as marker for RoomContents_Armory replacement -->
      <Shell_HighExplosive>
        <position>(1,0,0)</position>
        <stackCountRange>1~1</stackCountRange>
      </Shell_HighExplosive>
    </things>
  </PrefabDef>
</Defs>
