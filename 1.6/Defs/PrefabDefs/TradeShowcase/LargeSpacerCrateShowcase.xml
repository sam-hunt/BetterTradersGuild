<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Large Spacer Crate Showcase Prefab
    Large display arrangement for valuable spacer crates in the Trade Showcase room.

    Features:
    - 6x6 prefab size
    - Center placement (not edge-only)

    Design (top view, North is up):
        x: 0 1 2 3 4 5
    z=5:   W W . . W W
    z=4:   W s s s s W
    z=3:   . s C C s .
    z=2:   . s C C s .
    z=1:   W s s s s W
    z=0:   W W . . W W

    Legend:
    W = OrbitalAncientFortifiedWall (decorative frame)
    C = AncientSealedContainer (2x2 sealed container with valuable loot)
    s = SilverTile terrain (elevated display platform)
  -->

  <PrefabDef>
    <defName>BTG_LargeSpacerCrateShowcase</defName>
    <size>(6,6)</size>
    <things>
      <!-- Central sealed container (2x2, position is bottom-left corner) -->
      <AncientSealedContainer>
        <position>(2,0,2)</position>
      </AncientSealedContainer>

      <!-- Decorative wall frame (12 walls) -->
      <OrbitalAncientFortifiedWall>
        <position>(0,0,0)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(1,0,0)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(4,0,0)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(5,0,0)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(0,0,1)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(5,0,1)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(0,0,4)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(5,0,4)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(0,0,5)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(1,0,5)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(4,0,5)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(5,0,5)</position>
      </OrbitalAncientFortifiedWall>
    </things>

    <terrain>
      <!-- Silver tile platform (inner 4x4 rect) -->
      <SilverTile>
        <rects>
          <li>(0,0,5,5)</li>
        </rects>
      </SilverTile>
    </terrain>

  </PrefabDef>
</Defs>