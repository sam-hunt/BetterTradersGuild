<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Small Spacer Crate Showcase Prefab (Edge Variant)
    Edge-only display for valuable sealed crates in the Trade Showcase room.

    Features:
    - 5x2 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=1):
        x: 0 1 2 3 4
    z=1:   W C S P W
    z=0:   . . . . .

    Legend:
    W = OrbitalAncientFortifiedWall (decorative corner pillars)
    C = AncientSealedCrate (1x1 high-value loot crate)
    S = SculptureSmall (marble, good quality)
    P = PlantPot (marble, normal quality - roses planted by RoomContentsWorker)
    s = SilverTile terrain (elevated display platform)
  -->

  <PrefabDef>
    <defName>BTG_SmallSpacerCrateShowcase_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(5,2)</size>
    <things>
      <!-- Sealed crate with high-value loot -->
      <AncientSealedCrate>
        <position>(1,0,1)</position>
      </AncientSealedCrate>

      <!-- Small marble sculpture -->
      <SculptureSmall>
        <position>(2,0,1)</position>
        <stuff>BlocksMarble</stuff>
        <quality>Good</quality>
      </SculptureSmall>

      <!-- Marble plant pot (roses planted by RoomContentsWorker) -->
      <PlantPot>
        <position>(3,0,1)</position>
        <stuff>BlocksMarble</stuff>
        <quality>Good</quality>
      </PlantPot>

      <!-- Decorative corner pillars -->
      <OrbitalAncientFortifiedWall>
        <position>(0,0,1)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(4,0,1)</position>
      </OrbitalAncientFortifiedWall>

      <!-- Hidden conduit under walls -->
      <HiddenConduit>
        <position>(0,0,1)</position>
      </HiddenConduit>
      <HiddenConduit>
        <position>(4,0,1)</position>
      </HiddenConduit>

      <!-- Wall lamps mounted on corner pillars, facing into room -->
      <WallLamp>
        <position>(0,0,0)</position>
        <relativeRotation>Opposite</relativeRotation>
      </WallLamp>
      <WallLamp>
        <position>(4,0,0)</position>
        <relativeRotation>Opposite</relativeRotation>
      </WallLamp>
    </things>

    <terrain>
      <!-- Silver tile platform (3x2 rect under display items) -->
      <SilverTile>
        <rects>
          <li>(1,1,3,1)</li>
        </rects>
      </SilverTile>
    </terrain>
  </PrefabDef>
</Defs>