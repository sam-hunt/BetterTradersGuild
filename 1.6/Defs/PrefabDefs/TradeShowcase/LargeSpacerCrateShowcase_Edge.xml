<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Large Spacer Crate Showcase Prefab (Edge Variant)
    Edge-only display for valuable sealed containers in the Trade Showcase room.

    Features:
    - 6x3 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=2):
        x: 0 1 2 3 4 5
    z=2:   W P C C P W
    z=1:   W s C C s W
    z=0:   . . . . . .

    Legend:
    W = OrbitalAncientFortifiedWall (decorative side pillars)
    P = PlantPot (marble, normal quality - roses planted by RoomContentsWorker)
    C = AncientSealedContainer (2x2 sealed container with valuable loot)
    s = SilverTile terrain (elevated display platform)
  -->

  <PrefabDef>
    <defName>BTG_LargeSpacerCrateShowcase_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(6,3)</size>
    <things>
      <!-- Central sealed container (2x2, position is bottom-left corner) -->
      <AncientSealedContainer>
        <position>(2,0,1)</position>
      </AncientSealedContainer>

      <!-- Marble plant pots (roses planted by RoomContentsWorker) -->
      <PlantPot>
        <position>(1,0,2)</position>
        <stuff>BlocksMarble</stuff>
        <quality>Good</quality>
      </PlantPot>
      <PlantPot>
        <position>(4,0,2)</position>
        <stuff>BlocksMarble</stuff>
        <quality>Good</quality>
      </PlantPot>

      <!-- Wall lamps mounted on side pillars, facing inward -->
      <WallLamp>
        <position>(1,0,1)</position>
        <relativeRotation>Clockwise</relativeRotation>
      </WallLamp>
      <WallLamp>
        <position>(4,0,1)</position>
        <relativeRotation>Counterclockwise</relativeRotation>
      </WallLamp>

      <!-- Decorative side pillars (2 per side) -->
      <OrbitalAncientFortifiedWall>
        <position>(0,0,1)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(0,0,2)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(5,0,1)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(5,0,2)</position>
      </OrbitalAncientFortifiedWall>

      <!-- Hidden power conduit under walls -->
      <HiddenConduit>
        <position>(0,0,1)</position>
      </HiddenConduit>
      <HiddenConduit>
        <position>(0,0,2)</position>
      </HiddenConduit>
      <HiddenConduit>
        <position>(5,0,1)</position>
      </HiddenConduit>
      <HiddenConduit>
        <position>(5,0,2)</position>
      </HiddenConduit>
    </things>

    <terrain>
      <!-- Silver tile platform (4x2 rect under display items) -->
      <SilverTile>
        <rects>
          <li>(1,1,4,2)</li>
        </rects>
      </SilverTile>
    </terrain>
  </PrefabDef>
</Defs>
