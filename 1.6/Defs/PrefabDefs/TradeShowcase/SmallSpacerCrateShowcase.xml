<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Small Spacer Crate Showcase Prefab
    Display arrangement for valuable spacer crates in the Trade Showcase room.

    Features:
    - 5x5 prefab size
    - Center placement (not edge-only)

    Design (top view, North is up):
        x: 0 1 2 3 4
    z=4:   W W . W W
    z=3:   W C s P W
    z=2:   . s s s .
    z=1:   W P s C W
    z=0:   W W . W W

    Legend:
    W = OrbitalAncientFortifiedWall (decorative frame)
    C = AncientSealedCrate (1x1 high-value loot crate)
    P = PlantPot (marble, good quality - roses planted by RoomContentsWorker)
    s = SilverTile terrain (elevated display platform)
  -->

  <PrefabDef>
    <defName>BTG_SmallSpacerCrateShowcase</defName>
    <size>(5,5)</size>
    <things>
      <!-- Sealed crates with high-value loot (diagonal arrangement) -->
      <AncientSealedCrate>
        <position>(1,0,3)</position>
      </AncientSealedCrate>
      <AncientSealedCrate>
        <position>(3,0,1)</position>
      </AncientSealedCrate>

      <!-- Marble plant pots (diagonal arrangement, opposite corners from crates) -->
      <PlantPot>
        <position>(3,0,3)</position>
        <stuff>BlocksMarble</stuff>
        <quality>Good</quality>
      </PlantPot>
      <PlantPot>
        <position>(1,0,1)</position>
        <stuff>BlocksMarble</stuff>
        <quality>Good</quality>
      </PlantPot>

      <!-- Decorative wall frame (12 walls) -->
      <OrbitalAncientFortifiedWall>
        <position>(0,0,0)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(1,0,0)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(3,0,0)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(4,0,0)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(0,0,1)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(4,0,1)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(0,0,3)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(4,0,3)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(0,0,4)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(1,0,4)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(3,0,4)</position>
      </OrbitalAncientFortifiedWall>
      <OrbitalAncientFortifiedWall>
        <position>(4,0,4)</position>
      </OrbitalAncientFortifiedWall>
    </things>

    <terrain>
      <!-- Silver tile platform (rect under display items) -->
      <SilverTile>
        <rects>
          <li>(1,1,3,3)</li>
        </rects>
      </SilverTile>
    </terrain>

  </PrefabDef>
</Defs>
