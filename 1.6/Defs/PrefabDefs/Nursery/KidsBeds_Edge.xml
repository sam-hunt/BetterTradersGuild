<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Kid Beds Prefab
    Kid sleeping arrangements for nursery.

    Features:
    - 3x2 prefab size
    - Edge placement (against walls)

    Design (top view, North is up, wall at z=2):
        x: 0 1 2
    z=1:   B T B
    z=0:   B . B

    Legend:
    B = Bed (steel, facing into room)
    T = EndTable (steel, facing into room)
    . = empty space
  -->

  <PrefabDef>
    <defName>BTG_KidBeds_Edge</defName>
    <size>(3,2)</size>
    <edgeOnly>true</edgeOnly>

    <things>
      <Bed>
        <positions>
          <li>(0, 0, 1)</li>
          <li>(2, 0, 1)</li>
        </positions>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>WoodLog</stuff>
        <quality>Good</quality>
      </Bed>

      <EndTable>
        <position>(1, 0, 1)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>WoodLog</stuff>
        <quality>Good</quality>
      </EndTable>
    </things>

  </PrefabDef>
</Defs>
