<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Quad Pod Launcher Prefab
    Interior placement (not edge-only) for central positioning in launch bay.
  -->
  <PrefabDef>
    <defName>BTG_QuadPodLauncher</defName>
    <size>(5,3)</size>
    <things>
      <TransportPod>
        <rects>
          <li>(1,0,1,0)</li>
          <li>(3,0,3,0)</li>
          <li>(0,2,0,2)</li>
          <li>(2,2,2,2)</li>
        </rects>
      </TransportPod>
      <FirefoamPopper>
        <position>(4, 0, 1)</position>
      </FirefoamPopper>
      <PodLauncher>
        <positions>
          <li>(0, 0, 0)</li>
          <li>(2, 0, 0)</li>
        </positions>
      </PodLauncher>
      <PodLauncher>
        <positions>
          <li>(1, 0, 2)</li>
          <li>(3, 0, 2)</li>
        </positions>
        <relativeRotation>Opposite</relativeRotation>
      </PodLauncher>
    </things>
  </PrefabDef>
</Defs>