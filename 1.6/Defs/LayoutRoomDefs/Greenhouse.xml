<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Greenhouse
    Food production facility with growing crops.
  -->

  <LayoutRoomDef>
    <defName>BTG_Greenhouse</defName>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.Greenhouse.RoomContents_Greenhouse</roomContentsWorkerType>

    <scatter>
      <!-- Heavy dirt from soil and plant work -->
      <Filth_Dirt>
        <groupsPerHundredCells>5~8</groupsPerHundredCells>
        <itemsPerGroup>3~6</itemsPerGroup>
        <minGroups>3</minGroups>
        <groupDistRange>1~3</groupDistRange>
      </Filth_Dirt>

      <!-- Disturbed soil from planting -->
      <Filth_LooseGround>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <minGroups>1</minGroups>
      </Filth_LooseGround>
    </scatter>

    <floorTypes>
      <li>CarpetGreen</li>
      <li>CarpetGreenFaded</li>
      <li>CarpetOliveDark</li>
      <li>CarpetGreenMuddy</li>
    </floorTypes>
    <edgeTerrain>FlagstoneMarble</edgeTerrain>

    <prefabs>
      <!-- Functional hydroponics basins -->
      <BTG_HydroponicsCluster>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>2~8</minMaxRange>
      </BTG_HydroponicsCluster>

      <!-- Drug lab for medicine production (working, not Ancient) -->
      <BTG_DrugLab_Edge>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_DrugLab_Edge>

      <!-- VNPE nutrient paste grinder for processing crops -->
      <BTG_NutrientPasteGrinder_Edge MayRequire="VanillaExpanded.VNutrientE">
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_NutrientPasteGrinder_Edge>

      <!-- VNPE nutrient paste vat for storing processed paste -->
      <BTG_NutrientPasteVat_Edge MayRequire="VanillaExpanded.VNutrientE">
        <countPerHundredCells>3</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_NutrientPasteVat_Edge>

      <!-- Storage for harvested crops (contents filled by RoomContentsWorker) -->
      <BTG_SteelShelf_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>1~3</minMaxRange>
      </BTG_SteelShelf_Edge>

      <WoodenCratesWithSomeLoot>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </WoodenCratesWithSomeLoot>

      <!-- Packaged survival meals for food storage -->
      <SurvivalMealPallet>
        <countPerHundredCells>1</countPerHundredCells>
        <countRange>0~1</countRange>
      </SurvivalMealPallet>
    </prefabs>

    <parts>
      <WaspDrone>0.1</WaspDrone>
      <BTG_PlantPot_Corner>1.0</BTG_PlantPot_Corner>
      <!-- Agricultural mech - tends crops in greenhouse -->
      <BTG_Mech_Agrihand MayRequire="Ludeon.RimWorld.Biotech">0.35</BTG_Mech_Agrihand>
    </parts>
  </LayoutRoomDef>
</Defs>
