<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Pod Launch Bay

    Open-air facility for launching cargo pods.
    Features:
    - Concrete floor with steel tile edges
    - Quad pod launchers (interior placement)
    - Supply shelves with fuel and materials
    - Custom room contents worker for future VE integration
  -->

  <LayoutRoomDef>
    <defName>BTG_PodLaunchBay</defName>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.PodLaunchBay.RoomContents_PodLaunchBay</roomContentsWorkerType>
    <noRoof>true</noRoof>
    <minSingleRectWidth>10</minSingleRectWidth>
    <minSingleRectHeight>10</minSingleRectHeight>

    <floorTypes>
      <li>AncientConcrete</li>
    </floorTypes>
    <edgeTerrain>MetalTile</edgeTerrain>

    <prefabs>
      <BTG_PodLaunchers>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>1~4</minMaxRange>
      </BTG_PodLaunchers>

      <BTG_SteelShelf_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>1~3</minMaxRange>
      </BTG_SteelShelf_Edge>

      <BTG_ChemfuelTank_Edge MayRequire="VanillaExpanded.VChemfuelE">
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>1~2</minMaxRange>
      </BTG_ChemfuelTank_Edge>

      <IndustrialShelf_Edge>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </IndustrialShelf_Edge>
    </prefabs>

    <scatter>
      <!-- Fuel spillage from pod operations -->
      <Filth_Fuel>
        <groupsPerHundredCells>2~3</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <minGroups>1</minGroups>
      </Filth_Fuel>

      <!-- Oil smears from machinery -->
      <Filth_OilSmear>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <minGroups>1</minGroups>
        <groupDistRange>1~2</groupDistRange>
      </Filth_OilSmear>

      <!-- Scorch marks from pod launches -->
      <Filth_BlastMark>
        <groupsPerHundredCells>1~2</groupsPerHundredCells>
        <itemsPerGroup>1~1</itemsPerGroup>
        <minGroups>0</minGroups>
      </Filth_BlastMark>
    </scatter>

  </LayoutRoomDef>
</Defs>