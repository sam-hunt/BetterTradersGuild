<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Medical Bay

    Healthcare facility with modern hospital beds, medicine storage, and
    hydroponic healroot cultivation.

    Features:
    - Sterile tile flooring (white medical floors)
    - Sterile tile edges (not metal)
    - Modern hospital beds (not ancient/rusted)
    - Medicine storage shelves (stocked with 8-16 industrial medicine per shelf)
    - Single hydroponic basin growing healroot
    - Low threat level (vulnerable medical area)
  -->

  <LayoutRoomDef>
    <defName>BTG_MedicalBay</defName>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.RoomContents_MedicalBay</roomContentsWorkerType>
    <minSingleRectWidth>9</minSingleRectWidth>
    <minSingleRectHeight>9</minSingleRectHeight>

    <!-- Sterile flooring for medical operations -->
    <floorTypes>
      <li>SterileTile</li>
    </floorTypes>
    <edgeTerrain>SterileTile</edgeTerrain>

    <prefabs>
      <!-- Modern hospital beds with vitals monitors (edge) -->
      <BTG_HospitalBeds_Edge>
        <countPerTenEdgeCells>5</countPerTenEdgeCells>
        <minMaxRange>3~8</minMaxRange>
      </BTG_HospitalBeds_Edge>

      <!-- Medicine storage shelves -->
      <BTG_MedicineShelf_Edge>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>2~3</minMaxRange>
      </BTG_MedicineShelf_Edge>

      <!-- Hydroponic basin for healroot cultivation -->
      <BTG_HydroponicHealroot>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>1~1</minMaxRange>
      </BTG_HydroponicHealroot>

      <!-- VFE Medical vitals monitoring centre (links to hospital beds) -->
      <BTG_VitalsCentre MayRequire="VanillaExpanded.VFEMedical">
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_VitalsCentre>

      <!-- Compact hospital bed units (interior, low priority) -->
      <BTG_HospitalBeds>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>0~4</minMaxRange>
      </BTG_HospitalBeds>

      <!-- Trash shelf along wall edge -->
      <IndustrialShelf_InnerWall>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </IndustrialShelf_InnerWall>
    </prefabs>

    <!-- Low threat level (vulnerable medical area), but occasional unruly traders -->
    <parts>
      <WaspDrone>0.3</WaspDrone>
      <CornerArmoredTurret>0.2</CornerArmoredTurret>
      <BTG_PlantPot_Corner>1.0</BTG_PlantPot_Corner>
    </parts>
  </LayoutRoomDef>
</Defs>
