<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Control Center

    Command center with terminals, consoles, and server equipment.
  -->

  <LayoutRoomDef>
    <defName>BTG_ControlCenter</defName>
    <minSingleRectWidth>12</minSingleRectWidth>
    <minSingleRectHeight>12</minSingleRectHeight>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.ControlCenter.RoomContents_ControlCenter</roomContentsWorkerType>

    <scatter>
      <!-- Printouts and paperwork -->
      <Filth_ScatteredDocuments>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>1~3</itemsPerGroup>
        <minGroups>1</minGroups>
      </Filth_ScatteredDocuments>
    </scatter>

    <floorTypes>
      <li>MetalTile</li>
    </floorTypes>

    <prefabs>
      <!-- Working comms console for trade communications -->
      <BTG_CommsConsole_Edge>
        <countPerHundredCells>6</countPerHundredCells>
        <minMaxRange>4~10</minMaxRange>
      </BTG_CommsConsole_Edge>

      <!-- Hackable terminals (functional, not destroyed) -->
      <AncientSecurityTerminal>
        <countPerHundredCells>4</countPerHundredCells>
        <minMaxRange>2~4</minMaxRange>
      </AncientSecurityTerminal>

      <!-- Filing cabinets -->
      <AncientFilingCabinet_Edge>
        <countPerTenEdgeCells>3</countPerTenEdgeCells>
        <minMaxRange>1~2</minMaxRange>
      </AncientFilingCabinet_Edge>
    </prefabs>

    <parts>
      <HunterDrone>0.1</HunterDrone>
      <CornerArmoredTurret>0.2</CornerArmoredTurret>
    </parts>
  </LayoutRoomDef>
</Defs>