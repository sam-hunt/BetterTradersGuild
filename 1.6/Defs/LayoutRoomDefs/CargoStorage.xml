<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Cargo Storage

    Shipping containers and pallets for bulk goods.
  -->

  <LayoutRoomDef>
    <defName>BTG_CargoStorage</defName>
    <canMergeWithAdjacentRoom>true</canMergeWithAdjacentRoom>

    <scatter>
      <!-- Tracked-in dirt from cargo handling -->
      <Filth_Dirt>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>2~4</itemsPerGroup>
        <minGroups>1</minGroups>
        <groupDistRange>1~2</groupDistRange>
      </Filth_Dirt>
    </scatter>

    <floorTypes>
      <li>MetalTile</li>
    </floorTypes>

    <prefabs>
      <!-- Fluid storage if VE Chemfuel Expanded is enabled -->
      <BTG_DeepchemTank_Edge MayRequire="VanillaExpanded.VChemfuelE">
        <countPerHundredCells>3</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_DeepchemTank_Edge>

      <!-- Shipping containers and pallets -->
      <AncientCratePallet_Cluster>
        <countPerHundredCells>3</countPerHundredCells>
        <minMaxRange>2~4</minMaxRange>
      </AncientCratePallet_Cluster>

      <!-- Industrial shelving -->
      <IndustrialShelf_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>2~12</minMaxRange>
      </IndustrialShelf_Edge>

      <IndustrialShelf_Rows>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>1~3</minMaxRange>
      </IndustrialShelf_Rows>

      <!-- Crates -->
      <AncientSpacerCrate_Cluster>
        <countPerHundredCells>4</countPerHundredCells>
        <minMaxRange>3~10</minMaxRange>
      </AncientSpacerCrate_Cluster>
    </prefabs>

    <parts>
      <WaspDrone>0.15</WaspDrone>
      <CornerArmoredTurret>0.2</CornerArmoredTurret>
    </parts>
  </LayoutRoomDef>
</Defs>
