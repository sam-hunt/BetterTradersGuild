<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Storeroom
    General storage with mixed loot crates.
    Also VE fluid tanks if mods active
  -->

  <LayoutRoomDef>
    <defName>BTG_Storeroom</defName>
    <canMergeWithAdjacentRoom>true</canMergeWithAdjacentRoom>

    <edgeTerrain>MetalTile</edgeTerrain>

    <prefabs>
      <!-- Fluid storage if VE pipe network mods are enabled -->
      <BTG_SmallOxygenTank_Edge MayRequire="vanillaexpanded.gravship">
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_SmallOxygenTank_Edge>

      <BTG_SmallAstrofuelTank_Edge MayRequire="vanillaexpanded.gravship">
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_SmallAstrofuelTank_Edge>

      <BTG_ChemfuelTank_Edge MayRequire="VanillaExpanded.VChemfuelE">
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_ChemfuelTank_Edge>

      <!-- Packaged survival meals for food storage -->
      <SurvivalMealPallet>
        <countPerHundredCells>1</countPerHundredCells>
        <countRange>0~1</countRange>
      </SurvivalMealPallet>

      <!-- Industrial shelving -->
      <IndustrialShelf_InnerWall>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </IndustrialShelf_InnerWall>

      <IndustrialShelf_Edge>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>1~4</minMaxRange>
      </IndustrialShelf_Edge>

      <IndustrialShelf_Rows>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </IndustrialShelf_Rows>

      <!-- Mixed garbage crates -->
      <AncientCratePallet_Cluster>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientCratePallet_Cluster>

      <!-- Steel scrap pallet (2x2, openable for steel slag) -->
      <AncientSteelPallet>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientSteelPallet>

      <!-- Empty chemfuel barrel pallets (4x2 cluster) -->
      <AncientChembarrelPallet_Cluster>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientChembarrelPallet_Cluster>

      <AncientCratesWithComponents>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientCratesWithComponents>

      <AncientSpacerCrate_Cluster>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>2~6</minMaxRange>
      </AncientSpacerCrate_Cluster>

      <!-- Mech recharging station for hauler mechs -->
      <BTG_BasicRecharger_Edge MayRequire="Ludeon.RimWorld.Biotech">
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_BasicRecharger_Edge>

      <!-- Safety equipment -->
      <FirefoamPopper>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>1~2</minMaxRange>
      </FirefoamPopper>
    </prefabs>

    <scatter>
      <!-- Tracked-in dirt from storage activity -->
      <Filth_Dirt>
        <groupsPerHundredCells>1~2</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <minGroups>0</minGroups>
      </Filth_Dirt>

      <!-- Old rags from unpacking/cleaning -->
      <Filth_MoldyUniform>
        <groupsPerHundredCells>0~1</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <minGroups>0</minGroups>
      </Filth_MoldyUniform>
    </scatter>

    <parts>
      <WaspDrone>0.15</WaspDrone>
      <CornerArmoredTurret>0.2</CornerArmoredTurret>
      <AncientBarricades>0.25</AncientBarricades>
      <!-- Cleaning mech - keeps storage areas tidy -->
      <BTG_Mech_Cleansweeper MayRequire="Ludeon.RimWorld.Biotech">0.5</BTG_Mech_Cleansweeper>
      <!-- Hauling mech - moves heavy cargo -->
      <BTG_Mech_Lifter MayRequire="Ludeon.RimWorld.Biotech">
        <countRange>0~1</countRange>
      </BTG_Mech_Lifter>
    </parts>
  </LayoutRoomDef>
</Defs>
