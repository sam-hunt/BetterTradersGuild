<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Recreation Room

    Crew leisure and entertainment area.
  -->

  <LayoutRoomDef>
    <defName>BTG_RecRoom</defName>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.RecRoom.RoomContents_RecRoom</roomContentsWorkerType>
    <minSingleRectWidth>8</minSingleRectWidth>
    <minSingleRectHeight>8</minSingleRectHeight>

    <scatter>
      <!-- Snack wrappers and debris from leisure activities -->
      <Filth_Trash>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>1~3</itemsPerGroup>
        <minGroups>1</minGroups>
      </Filth_Trash>
    </scatter>

    <floorTypes>
      <li>CarpetRed</li>
      <li>CarpetBlueSubtle</li>
    </floorTypes>
    <edgeTerrain>MetalTile</edgeTerrain>

    <prefabs>
      <!-- Recreation items -->
      <BilliardsTable>
        <countRange>0~2</countRange>
      </BilliardsTable>

      <PokerTable>
        <countRange>0~2</countRange>
      </PokerTable>

      <ChessTable>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>0~2</minMaxRange>
      </ChessTable>

      <!-- Entertainment -->
      <FlatscreenTelevision>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>1~1</minMaxRange>
      </FlatscreenTelevision>

      <!-- Seating -->
      <Couch_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>1~2</minMaxRange>
      </Couch_Edge>

      <Armchairs_Edge>
        <countPerTenEdgeCells>3</countPerTenEdgeCells>
        <minMaxRange>2~4</minMaxRange>
      </Armchairs_Edge>

      <!-- Storage lockers -->
      <AncientLockerBank_Row>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>2~8</minMaxRange>
      </AncientLockerBank_Row>
    </prefabs>

    <parts>
      <WaspDrone>0.05</WaspDrone>
      <BTG_PlantPot_Corner>1.0</BTG_PlantPot_Corner>
      <!-- Cleaning mech - maintains rec room cleanliness -->
      <BTG_Mech_Cleansweeper MayRequire="Ludeon.RimWorld.Biotech">0.5</BTG_Mech_Cleansweeper>
    </parts>
  </LayoutRoomDef>
</Defs>