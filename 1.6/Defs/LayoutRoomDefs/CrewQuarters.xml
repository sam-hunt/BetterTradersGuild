<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Crew Quarters

    Crew quarters with multiple enclosed subrooms
  -->

  <LayoutRoomDef>
    <defName>BTG_CrewQuarters</defName>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.CrewQuarters.RoomContents_CrewQuarters</roomContentsWorkerType>
    <minSingleRectWidth>14</minSingleRectWidth>
    <minSingleRectHeight>11</minSingleRectHeight>

    <!-- Basic carpet flooring -->
    <floorTypes>
      <li>CarpetMarble</li>
      <li>CarpetGreyDark</li>
    </floorTypes>

    <scatter>
      <!-- Light trash from daily living -->
      <Filth_Trash>
        <groupsPerHundredCells>0~1</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <minGroups>0</minGroups>
      </Filth_Trash>
    </scatter>

    <prefabs>
      <!-- Bed subrooms (5x5 BTG_CrewBedSubroom) spawned iteratively by RoomContents_CrewQuarters
           Places multiple subrooms along walls until no valid corner/edge placement remains -->

      <!-- Lockers for personal storage -->
      <AncientLockerBank_Row>
        <countPerTenEdgeCells>3</countPerTenEdgeCells>
        <minMaxRange>4~12</minMaxRange>
      </AncientLockerBank_Row>

    </prefabs>
  </LayoutRoomDef>
</Defs>