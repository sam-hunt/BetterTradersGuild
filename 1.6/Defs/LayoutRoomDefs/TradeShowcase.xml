<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Trade Showcase

    Display room for valuable goods and merchant's prized items.

    Features:
    - Deep purple carpet flooring with silver tile edges (matching Commander's Quarters)
    - 9x9 minimum size for spacious display area
    - Corner sculptures placed by room contents worker
    - Spacer crate showcases for displaying valuable trade goods
  -->

  <LayoutRoomDef>
    <defName>BTG_TradeShowcase</defName>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.RoomContents_TradeShowcase</roomContentsWorkerType>
    <minSingleRectWidth>9</minSingleRectWidth>
    <minSingleRectHeight>9</minSingleRectHeight>

    <!-- Luxurious flooring (matching Commander's Quarters) -->
    <floorTypes>
      <li>CarpetPurpleDeep</li>
    </floorTypes>
    <edgeTerrain>SilverTile</edgeTerrain>

    <prefabs>
      <!-- Small spacer crate display (5x5, center placement) -->
      <BTG_SmallSpacerCrateShowcase>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>1~2</minMaxRange>
      </BTG_SmallSpacerCrateShowcase>

      <!-- Large spacer crate display (6x6, center placement) -->
      <BTG_LargeSpacerCrateShowcase>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </BTG_LargeSpacerCrateShowcase>

      <!-- Small edge display (5x2, wall placement) -->
      <BTG_SmallSpacerCrateShowcase_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>1~3</minMaxRange>
      </BTG_SmallSpacerCrateShowcase_Edge>

      <!-- Large edge display (6x3, wall placement) -->
      <BTG_LargeSpacerCrateShowcase_Edge>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~2</minMaxRange>
      </BTG_LargeSpacerCrateShowcase_Edge>
    </prefabs>

    <!-- High threat (valuable goods) -->
    <parts>
      <HunterDrone>0.8</HunterDrone>
      <CornerArmoredTurret>0.6</CornerArmoredTurret>
      <BTG_PlantPot_Corner>1.0</BTG_PlantPot_Corner>
    </parts>
  </LayoutRoomDef>
</Defs>