<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Mess Hall

    Communal dining and food preparation area.
  -->

  <LayoutRoomDef>
    <defName>BTG_MessHall</defName>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.RoomContents_MessHall</roomContentsWorkerType>
    <minSingleRectWidth>10</minSingleRectWidth>
    <minSingleRectHeight>10</minSingleRectHeight>

    <!-- Fine flooring for dining area -->
    <floorTypes>
      <li>SterileTile</li>
      <li>WoodPlankFloor</li>
      <li>CarpetMarble</li>
    </floorTypes>
    <edgeTerrain>MetalTile</edgeTerrain>

    <prefabs>
      <!-- Kitchen area -->
      <Subroom_ElectricStove>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>1~2</minMaxRange>
      </Subroom_ElectricStove>

      <!-- VNPE nutrient paste tap for dispensing meals -->
      <BTG_NutrientPasteTap_Edge MayRequire="VanillaExpanded.VNutrientE">
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>1~2</minMaxRange>
      </BTG_NutrientPasteTap_Edge>

      <!-- VFE Production kitchen sink cabinet (stove linkable) -->
      <BTG_KitchenSinkCabinet_Edge MayRequire="VanillaExpanded.VFEProduction">
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>1~2</minMaxRange>
      </BTG_KitchenSinkCabinet_Edge>

      <!-- Dining tables -->
      <BTG_DiningTable>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>1~2</minMaxRange>
      </BTG_DiningTable>

      <!-- Food storage -->
      <BTG_SteelShelf_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>2~6</minMaxRange>
      </BTG_SteelShelf_Edge>

      <SurvivalMealPallet>
        <countRange>1~3</countRange>
      </SurvivalMealPallet>

      <!-- Decoration -->
      <BTG_SmallSculpture>
        <countRange>0~2</countRange>
      </BTG_SmallSculpture>
    </prefabs>

    <parts>
      <WaspDrone>0.05</WaspDrone>
    </parts>
  </LayoutRoomDef>
</Defs>