<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Cargo Vault Structure Layout

    This StructureLayoutDef defines the vault structure for the BTG_CargoVaultHatch pocket map.
    Uses the same layout system as vanilla AncientStockpile for consistency.

    The vault is a single secure room accessed via the cargo vault hatch in shuttle bays.
    It uses OrbitalAncientFortifiedWall for durability and MetalTile flooring.
  -->

  <StructureLayoutDef>
    <defName>BTG_OrbitalCargoVault</defName>

    <!-- Custom worker for simple single-room pocket maps -->
    <workerClass>BetterTradersGuild.LayoutWorkers.CargoVault.LayoutWorker_CargoVault</workerClass>

    <!-- Structure styling - matches the operational TradersGuild aesthetic -->
    <wallDef>OrbitalAncientFortifiedWall</wallDef>
    <doorDef>AncientBlastDoor</doorDef>
    <wallLampDef>AncientEmergencyLight_Blue</wallLampDef>
    <wallLampChancePerPosition>1</wallLampChancePerPosition>

    <!-- Terrain settings -->
    <terrainDef>OrbitalPlatform</terrainDef>
    <defaultAffordanceTerrainDef>OrbitalPlatform</defaultAffordanceTerrainDef>
    <!-- Surrounding ring of platform terrain (similar to orbital platform) -->
    <surroundingTerrainDef>OrbitalPlatform</surroundingTerrainDef>
    <surroundingScatterRange>2~2</surroundingScatterRange>

    <!-- Our custom worker handles layout generation directly -->
    <clearRoomsEntirely>true</clearRoomsEntirely>
    <canHaveMultipleLayoutsInRoom>false</canHaveMultipleLayoutsInRoom>

    <!-- Room def assigned directly by LayoutWorker_CargoVault -->
    <roomDefs>
      <BTG_CargoVaultRoom>1</BTG_CargoVaultRoom>
    </roomDefs>

    <!-- No junk/debris - this is a maintained, operational vault -->
    <junkScaterrers />
  </StructureLayoutDef>
</Defs>