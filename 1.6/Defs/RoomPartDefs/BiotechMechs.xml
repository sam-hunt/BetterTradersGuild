<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Biotech Mech Room Parts

    Spawns Biotech mechanoids in rooms, assigned to the room's faction.
    Requires Biotech DLC - the MayRequire attribute ensures these defs are only
    loaded when Biotech is active.

    Usage in LayoutRoomDef parts:
      <BTG_Mech_Cleansweeper MayRequire="Ludeon.RimWorld.Biotech">0.5</BTG_Mech_Cleansweeper>
      <BTG_Mech_Fabricor MayRequire="Ludeon.RimWorld.Biotech">0.85</BTG_Mech_Fabricor>
      <BTG_Mech_Paramedic MayRequire="Ludeon.RimWorld.Biotech">0.85</BTG_Mech_Paramedic>
      <BTG_Mech_Militor MayRequire="Ludeon.RimWorld.Biotech"><countRange>1~3</countRange></BTG_Mech_Militor>

    The value is the probability of spawning one mech, or use countRange for multiple.
  -->

  <!-- Cleaning mech - MessHall, CommandersQuarters, RecRoom, Storeroom -->
  <RoomPartDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>BTG_Mech_Cleansweeper</defName>
    <workerClass>BetterTradersGuild.RoomParts.RoomPart_MechCleansweeper</workerClass>
  </RoomPartDef>

  <!-- Fabrication mech - Workshop -->
  <RoomPartDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>BTG_Mech_Fabricor</defName>
    <workerClass>BetterTradersGuild.RoomParts.RoomPart_MechFabricor</workerClass>
  </RoomPartDef>

  <!-- Medical mech - MedicalBay -->
  <RoomPartDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>BTG_Mech_Paramedic</defName>
    <workerClass>BetterTradersGuild.RoomParts.RoomPart_MechParamedic</workerClass>
  </RoomPartDef>

  <!-- Combat mech - MechRepairPost, MechSecurityPost, Armory -->
  <RoomPartDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>BTG_Mech_Militor</defName>
    <workerClass>BetterTradersGuild.RoomParts.RoomPart_MechMilitor</workerClass>
  </RoomPartDef>

  <!-- Agricultural mech - Greenhouse -->
  <RoomPartDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>BTG_Mech_Agrihand</defName>
    <workerClass>BetterTradersGuild.RoomParts.RoomPart_MechAgrihand</workerClass>
  </RoomPartDef>

  <!-- Hauling mech - Storeroom, ShuttleBay -->
  <RoomPartDef MayRequire="Ludeon.RimWorld.Biotech">
    <defName>BTG_Mech_Lifter</defName>
    <workerClass>BetterTradersGuild.RoomParts.RoomPart_MechLifter</workerClass>
  </RoomPartDef>

</Defs>
