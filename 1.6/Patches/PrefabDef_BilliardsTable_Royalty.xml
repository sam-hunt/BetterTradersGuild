<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--
    When Royalty DLC is active, add fine purple carpet beneath the billiards table.
    Covers the full 4x5 prefab footprint for a luxurious appearance.
  -->
  <Operation Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Royalty">
    <xpath>Defs/PrefabDef[defName="BTG_BilliardsTable"]</xpath>
    <value>
      <terrain>
        <CarpetFinePurpleDeep>
          <rects>
            <li>(0,0,3,4)</li>
          </rects>
        </CarpetFinePurpleDeep>
      </terrain>
    </value>
  </Operation>
</Patch>