<?xml version="1.0" encoding="utf-8"?>
<ModMetaData>
  <name>Better Traders Guild</name>
  <author>Sam Hunt</author>
  <packageId>shunter.bettertradersguild</packageId>
  <description>Overhaul for the Odyssey DLC Traders Guild faction:

    - Shuttle caravan trading at orbital faction bases
    - Rotating orbital traders simulate active trade operations
    - New map generation with inhabited, maintained settlements
    - Integrated cargo system linking trade stock to spawned items


    See Steam Workshop page for full details.</description>
  <supportedVersions>
    <li>1.6</li>
  </supportedVersions>
  <modDependencies>
    <li>
      <packageId>brrainz.harmony</packageId>
      <displayName>Harmony</displayName>
      <steamWorkshopUrl>steam://url/CommunityFilePage/2009463077</steamWorkshopUrl>
      <downloadUrl>https://github.com/pardeike/HarmonyRimWorld/releases/latest</downloadUrl>
    </li>
    <li>
      <packageId>ludeon.rimworld.odyssey</packageId>
      <displayName>RimWorld - Odyssey</displayName>
    </li>
  </modDependencies>
  <loadAfter>
    <li>brrainz.harmony</li>
    <li>ludeon.rimworld</li>
    <li>ludeon.rimworld.royalty</li>
    <li>ludeon.rimworld.ideology</li>
    <li>ludeon.rimworld.biotech</li>
    <li>ludeon.rimworld.anomaly</li>
    <li>ludeon.rimworld.odyssey</li>
    <!-- Third-party mods we conditionally patch via xml -->
