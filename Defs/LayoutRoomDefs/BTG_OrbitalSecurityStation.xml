<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Security Station

    Guard post with monitoring equipment.
  -->

  <LayoutRoomDef>
    <defName>BTG_OrbitalSecurityStation</defName>
    <minSingleRectWidth>6</minSingleRectWidth>
    <minSingleRectHeight>6</minSingleRectHeight>

    <floorTypes>
      <li>MetalTile</li>
    </floorTypes>

    <prefabs>
      <!-- Security terminals -->
      <AncientSecurityTerminal>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>1~2</minMaxRange>
      </AncientSecurityTerminal>

      <!-- Monitoring equipment (CRT TV) -->
      <TVWithArmchairs>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>1~1</minMaxRange>
      </TVWithArmchairs>

      <!-- Weapon storage -->
      <IndustrialShelf_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>1~3</minMaxRange>
      </IndustrialShelf_Edge>

      <!-- Lockers -->
      <AncientLockerBank_Row>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>2~6</minMaxRange>
      </AncientLockerBank_Row>
    </prefabs>

    <!-- Higher threat (security area) -->
    <parts>
      <HunterDrone>0.2</HunterDrone>
      <CornerArmoredTurret>0.3</CornerArmoredTurret>
    </parts>
  </LayoutRoomDef>
</Defs>
