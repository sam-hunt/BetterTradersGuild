<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Hydroponics

    Food production facility with growing crops.
  -->

  <LayoutRoomDef>
    <defName>BTG_OrbitalHydroponics</defName>
    <roomContentsWorkerType>BetterTradersGuild.RoomContents.RoomContents_Hydroponics</roomContentsWorkerType>
    <canMergeWithAdjacentRoom>true</canMergeWithAdjacentRoom>

    <floorTypes>
      <li>MetalTile</li>
    </floorTypes>

    <prefabs>
      <!-- Functional hydroponics basins -->
      <HydroponicsBasin_Cluster>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>2~8</minMaxRange>
      </HydroponicsBasin_Cluster>

      <!-- Drug lab for medicine production -->
      <AncientTableDrugLab>
        <countPerTenEdgeCells>1</countPerTenEdgeCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientTableDrugLab>

      <!-- Storage for harvested crops -->
      <IndustrialShelf_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>2~4</minMaxRange>
      </IndustrialShelf_Edge>

      <WoodenCratesWithSomeLoot>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </WoodenCratesWithSomeLoot>
    </prefabs>

    <parts>
      <WaspDrone>0.1</WaspDrone>
      <!-- Auto-connect power consumers to providers via L-shaped hidden conduits -->
      <ConnectConduits />
    </parts>
  </LayoutRoomDef>
</Defs>
