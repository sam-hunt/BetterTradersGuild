<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Trade Showcase

    Display room for valuable goods and merchant's prized items.

    REFINEMENTS:
    - Smaller size (5x5 min instead of 6x6)
    - Fine red carpet flooring
    - Gold tile edges for luxury aesthetic
  -->

  <LayoutRoomDef>
    <defName>BTG_OrbitalTradeShowcase</defName>
    <minSingleRectWidth>5</minSingleRectWidth>
    <minSingleRectHeight>5</minSingleRectHeight>

    <!-- Luxurious flooring -->
    <floorTypes>
      <li>CarpetRed</li>
    </floorTypes>
    <edgeTerrain>GoldTile</edgeTerrain>

    <prefabs>
      <!-- Display shelves -->
      <IndustrialShelf_Edge>
        <countPerTenEdgeCells>3</countPerTenEdgeCells>
        <minMaxRange>2~6</minMaxRange>
      </IndustrialShelf_Edge>

      <!-- Valuable items -->
      <AncientSpacerCrate_Cluster>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>1~3</minMaxRange>
      </AncientSpacerCrate_Cluster>

      <!-- Decorative sculptures -->
      <SculptureSmall>
        <countRange>1~3</countRange>
      </SculptureSmall>
    </prefabs>

    <!-- Moderate threat (valuable goods) -->
    <parts>
      <HunterDrone>0.15</HunterDrone>
      <CornerArmoredTurret>0.2</CornerArmoredTurret>
    </parts>
  </LayoutRoomDef>
</Defs>
