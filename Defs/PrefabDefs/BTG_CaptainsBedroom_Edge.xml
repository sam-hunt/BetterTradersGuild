<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Captain's Bedroom Edge

    A self-contained bedroom structure placed against room edge in Captain's Quarters.
    Creates a private 7x7 bedroom area including walls and secure blast door.
  -->
  <PrefabDef>
    <defName>BTG_CaptainsBedroom_Edge</defName>
    <size>(7,7)</size>
    <terrain>
      <CarpetRed>
        <rects>
          <li>(1,1,4,4)</li>
        </rects>
      </CarpetRed>
    </terrain>
    <things>
      <PlantPot>
        <position>(1, 0, 1)</position>
        <stuff>BlocksVacstone</stuff>
        <quality>Excellent</quality>
      </PlantPot>
      <AnimalBed>
        <position>(5, 0, 1)</position>
        <stuff>Leather_Wolf</stuff>
        <quality>Excellent</quality>
      </AnimalBed>
      <RoyalBed>
        <position>(4, 0, 5)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>BlocksVacstone</stuff>
        <quality>Excellent</quality>
      </RoyalBed>
      <Dresser>
        <position>(1, 0, 4)</position>
        <relativeRotation>Clockwise</relativeRotation>
        <stuff>BlocksVacstone</stuff>
        <quality>Excellent</quality>
      </Dresser>
      <LifeSupportUnit>
        <position>(5, 0, 3)</position>
        <relativeRotation>Clockwise</relativeRotation>
      </LifeSupportUnit>
      <AncientSafe>
        <position>(1, 0, 5)</position>
      </AncientSafe>
      <HiddenConduit>
        <rects>
          <li>(0,0,6,0)</li>
          <li>(0,1,0,6)</li>
          <li>(6,1,6,6)</li>
          <li>(1,6,5,6)</li>
        </rects>
      </HiddenConduit>
      <AncientBlastDoor>
        <position>(2, 0, 0)</position>
      </AncientBlastDoor>
      <ShelfSmall>
        <position>(5, 0, 5)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>BlocksVacstone</stuff>
      </ShelfSmall>
      <OrbitalAncientFortifiedWall>
        <rects>
          <li>(0,0,1,0)</li>
          <li>(3,0,6,0)</li>
          <li>(0,1,0,6)</li>
          <li>(6,1,6,6)</li>
          <li>(1,6,5,6)</li>
        </rects>
      </OrbitalAncientFortifiedWall>
      <EndTable>
        <position>(2, 0, 5)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>BlocksVacstone</stuff>
        <quality>Normal</quality>
      </EndTable>
      <FlatscreenTelevision>
        <position>(3, 0, 1)</position>
      </FlatscreenTelevision>
      <AncientEmergencyLight_Blue>
        <position>(4, 0, 5)</position>
      </AncientEmergencyLight_Blue>
    </things>
  </PrefabDef>
</Defs>