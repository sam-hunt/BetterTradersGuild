<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--
    Better Traders Guild - Captain's Bookshelf Prefab

    Personal library for the station leader.
    Features:
    - Small bookshelf (1x1, holds 5 books, excellent quality Vacstone)
    - Between 1-4 random recreation books of increasing quality
    - Books automatically inserted into bookcase container via RoomContents_CaptainsQuarters
  -->

  <PrefabDef>
    <defName>BTG_CaptainsBookshelf_Edge</defName>
    <edgeOnly>true</edgeOnly>
    <size>(1,1)</size>
    <things>
      <!-- Small bookcase for captain's personal library (against wall) -->
      <BookcaseSmall>
        <quality>Excellent</quality>
        <position>(0, 0, 0)</position>
        <relativeRotation>Opposite</relativeRotation>
        <stuff>BlocksVacstone</stuff>
      </BookcaseSmall>

      <!-- Recreation books -->
      <!-- Spawned at bookcase position, automatically inserted via FixBookcaseContents() -->
      <Novel>
        <chance>1</chance>
        <quality>Excellent</quality>
        <position>(0, 0, 0)</position>
      </Novel>
      <Novel>
        <chance>0.6</chance>
        <quality>Excellent</quality>
        <position>(0, 0, 0)</position>
      </Novel>
      <Novel>
        <chance>0.25</chance>
        <quality>Masterwork</quality>
        <position>(0, 0, 0)</position>
      </Novel>
      <Novel>
        <chance>0.15</chance>
        <quality>Legendary</quality>
        <position>(0, 0, 0)</position>
      </Novel>
    </things>
  </PrefabDef>
</Defs>